form(class='group')
	h1 Вход
	div(ng-show='!auth.auth')
		div(align='center')
			input#loguser(type='edit', placeholder='логин', size='10')
			input#logpass(type='password', placeholder='пароль', size='10')
		div(align='center')
			button(type='button', onclick='login()') Войти
			button(type='button', onclick='show("reg")') Регистрация
	div#logout(ng-show='auth.auth')
		div Hello, 
			a#username
		button(type='button', onclick='logout()') Выйти
